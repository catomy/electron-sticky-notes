{
  "name": "electron-sticky-notes",
  "version": "1.0.0",
  "description": "A cross-platform desktop sticky notes app built with Electron, Vue 3, and TypeScript",
  "main": "dist-electron/main.js",

  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron:build\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron:build": "tsc -w -p electron/tsconfig.json",
    "dev:electron": "wait-on http://localhost:8888 dist-electron/main.js && electron .",
    "build": "npm run build:vite && npm run build:electron && electron-builder",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron/tsconfig.json",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "vue",
    "sticky-notes",
    "desktop-app"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "lowdb": "^7.0.1",
    "uuid": "^9.0.1",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^8.2.2",
    "electron": "^39.2.7",
    "electron-builder": "^24.9.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "vue-tsc": "^1.8.27",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.electron.stickynotes",
    "productName": "Sticky Notes",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.png",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    }
  }
}
